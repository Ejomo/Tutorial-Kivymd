#Layout Principal Que debe contener una ScreenManager y un MDNavigationDrawer
NavigationLayout:
    id: nav_layout

    #Screen Manager Requerido para poder tener la barra de herramientas
    ScreenManager:

        # Esta Screen para contener el BoxLayout
        Screen:

            # Dentro de una distribuci칩n de caja agregamos la barra de herramientas
            # y el screen manager para cambiar de Pantallas
            BoxLayout:
                orientation: 'vertical'

                # Barra de herramientas en la parte superior
                MDToolbar:
                    title: app.title
                    elevation: 10
                    left_action_items: [['menu', lambda x: nav_drawer.set_state()]]

                # ScreenManager principal
                ScreenManager:
                    id: screen_manager

    # Navegador Lateral
    MDNavigationDrawer:
        id: nav_drawer

        # Tipo de distribuci칩n del espacio
        BoxLayout:
            orientation: 'vertical'
            padding: "8dp"
            spacing: "8dp"
            # Primer Widget
            Image:
                size_hint_y: .3
                source: "resources/logo.png"

            # ScrollView servir치 en caso de tener muchas pantallas(Botones)
            ScrollView:

                # Este tipo de widget nos servir치 para poder agregar los botones con etiquetas
                MDList:
                    id: nav_list
